# Azure Cosmos DB Configuration
COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-db-primary-key
COSMOS_DATABASE=QIICInsurance
COSMOS_CONTAINER_VEHICLES=Vehicles
COSMOS_CONTAINER_CUSTOMERS=Customers
COSMOS_CONTAINER_POLICIES=Policies
COSMOS_CONTAINER_CLAIMS=Claims

# Server Configuration (Real-time Backend)
PORT=4001
NODE_ENV=development
FRONTEND_ORIGIN=http://localhost:3002

# MongoDB Configuration (Optional - for Real-time Tracking)
# اتركه فارغاً لاستخدام In-Memory، أو ضع connection string لـ Atlas/local
# Leave empty for In-Memory storage, or add your MongoDB connection string

# Example for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://qic_admin:YOUR_PASSWORD@cluster.xxxxxx.mongodb.net/qic-insurance?retryWrites=true&w=majority

# Example for local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/qic-insurance

MONGODB_URI=

# MongoDB Connection Options (Optional)
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=1
MONGO_SERVER_SELECTION_TIMEOUT=5000
MONGO_SOCKET_TIMEOUT=45000

# API Configuration
API_VERSION=v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3002

